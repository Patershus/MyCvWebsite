@*Kontakt formulär, ska kopplas till form, mha tag helpers*@
<div style="width:40%" id="contact" class="container-fluid bg-grey">
    <h2 class="text-center">CONTACT</h2>
    <div id="row">
        @*<div class="col-sm-5">*@
        <p>Har du övriga frågor? Kontakta mig gärna via telefon, mail eller genom att fylla i formuläret.</p>

        <p><span class="glyphicon glyphicon-phone"></span> 070854124545</p>
        <p><span class="glyphicon glyphicon-envelope"></span> myemail@something.com</p>
        @*</div>*@
    </div>
    <form asp-controller="home" asp-action="Index">
        <div class="row">
            <div class="col-sm-6 form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
                @*<input class="form-control" id="name" name="name" placeholder="Name" type="text" required>*@
            </div>
            <div class="col-sm-6 form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
                @*<input class="form-control" id="email" name="email" placeholder="Email" type="email" required>*@
            </div>
        </div>
        <label asp-for="Message"></label>
        <br />
        <textarea asp-for="Message" rows="5" cols="53"></textarea>
       
        @*<textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea><br>*@
        <div class="row">
            <div class="col-sm-12 form-group">
                <input type="submit" value="Send" />
            </div>
        </div>
    </form>
</div>

